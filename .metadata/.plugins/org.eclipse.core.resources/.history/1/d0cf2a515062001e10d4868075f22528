		numeroX += 5;//15 //numeroX = numeroX + 5; 
		numeroX -= 10; //5 //numeroX = numeroX - 5;
		numeroX *= 2; //10 //numeroX = numeroX * 5;
		numeroX /= 2; //5 //numeroX = numeroX / 5;
		
